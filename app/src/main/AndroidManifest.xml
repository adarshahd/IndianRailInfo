<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adarshahd.donate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.adarshahd.donate.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.adarshahd.indianrailinfo.permission.C2D_MESSAGE" />

    <application
        android:name=".donate.IndianRailInfo"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".donate.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".donate.activities.PNRTrackingListActivity"
            android:label="@string/title_activity_pnrtracking_list"
            android:screenOrientation="portrait" />
        <activity
            android:name=".donate.activities.StationSelectActivity"
            android:label="@string/title_activity_station_select"
            android:screenOrientation="portrait" />
        <activity
            android:name=".donate.activities.AvailabilityActivity"
            android:label="Availability Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".donate.activities.FaresActivity"
            android:label="Fare Details"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".donate.receivers.PNRTracker"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="PNRTracker.ALARMRECEIVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".donate.receivers.CloudMessageReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.adarshahd.indianrailinfo" />
            </intent-filter>
        </receiver>

        <activity android:name=".donate.activities.AboutActivity"></activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="YOUR FABRIC KEY" />
    </application>

</manifest>
